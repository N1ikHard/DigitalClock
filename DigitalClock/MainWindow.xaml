<Window x:Class="DigitalClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600" WindowStartupLocation="CenterScreen" Background="{x:Null}" MouseLeftButtonDown="Window_MouseLeftButtonDown" Foreground="{x:Null}">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
           
            <ColumnDefinition Width="138*"/>
            <ColumnDefinition Width="138*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="138*"/>
            <ColumnDefinition Width="138*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Column="2" Margin="0.2,0,0.4,0.4">
            <Ellipse  Name="PointA" Fill="Red" Width="25" Height="25" Margin="5"/>
        </Viewbox>
        <Viewbox Grid.Column="2" Margin="0.2,110,0.4,0.8" Grid.RowSpan="2">
            <Ellipse  Name="PointB" Fill="Red" Width="25" Height="25" Margin="5"/>
        </Viewbox>

    </Grid>

</Window>
